<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="mformulae.core">

<body>

<tal:js metal:fill-slot="javascript_head_slot">
    <script type="text/javascript" src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
</tal:js>


<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="titol_formula" tal:content="context/title">Titol</h1>

        <h3 class="descriptio_formula" tal:content="context/Description">Description</h3>

        <p tal:content="structure context/taula"></p>

        <div class="autoFlowPlayer audio">
            <a tal:attributes="href string:${context/absolute_url}/@@display-file/audio"></a>
        </div>

        <h2>Temes</h2>
        <ul>
            <li tal:repeat="recurs context/temes">
                <a href="" tal:attributes="href python:recurs.to_object.absolute_url()"><h4 class="titol_llistat_recurs" tal:content="python:recurs.to_object.Title()"></h4></a>
                <p class="description_llistat_recurs" tal:content="python:recurs.to_object.Description()"></p>
            </li>
        </ul>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>